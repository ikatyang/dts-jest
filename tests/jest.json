{
  "testEnvironment": "node",
  "moduleFileExtensions": ["ts", "js", "json"],
  "rootDir": "..",
  "testMatch": [
    "<rootDir>/tests/example.ts",
    "<rootDir>/tests/example-module.ts"
  ],
  "transform": {
    "example[^]*\\.ts$": "<rootDir>/transform",
    "\\.ts$": "ts-jest"
  },
  "reporters": ["default", "<rootDir>/reporter"],
  "globals": {
    "_dts_jest_": {
      "compiler_options": {
        "module": "commonjs",
        "strict": true,
        "target": "es6"
      }
    }
  }
}
