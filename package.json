{
  "name": "dts-jest",
  "version": "20.0.2",
  "description": "A preprocessor for Jest to snapshot test TypeScript declaration (.d.ts) files",
  "keywords": [
    "jest",
    "jest-transform",
    "test",
    "typescript",
    "typescript-declarations"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "https://github.com/ikatyang/dts-jest",
  "homepage": "https://github.com/ikatyang/dts-jest#readme",
  "author": "ikatyang",
  "license": "MIT",
  "scripts": {
    "prepublish": "yarn run link && yarn run build",
    "link": "ln -sf $PWD $PWD/node_modules/",
    "lint": "tslint --type-check --project ./tsconfig.json",
    "prebuild": "rm -rf ./lib",
    "build": "tsc -p ./tsconfig.build.json",
    "test": "jest --config ./jest.json --no-cache",
    "pretest-coverage": "rm -rf ./coverage",
    "test-coverage": "yarn run test -- --coverage",
    "test-integration": "jest --config ./tests/jest.json --no-cache --verbose"
  },
  "dependencies": {
    "typescript": "2.4.0-dev.20170524"
  },
  "devDependencies": {
    "@types/jest": "19.2.3",
    "@types/node": "7.0.22",
    "codecov": "2.2.0",
    "jest": "20.0.4",
    "ts-jest": "20.0.4",
    "tslint": "5.3.2",
    "tslint-config-ikatyang": "0.6.0"
  },
  "peerDependencies": {
    "jest": "^20.0.0"
  },
  "engines": {
    "node": ">= 4"
  },
  "files": [
    "/*.js",
    "/lib/**/*"
  ]
}
