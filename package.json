{
  "name": "dts-jest",
  "version": "21.0.0",
  "description": "A preprocessor for Jest to snapshot test TypeScript declaration (.d.ts) files",
  "keywords": [
    "jest",
    "jest-transform",
    "test",
    "typescript",
    "typescript-declarations"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "dts-jest-remap-snapshot": "bin/remap-snapshot.js"
  },
  "repository": "https://github.com/ikatyang/dts-jest",
  "homepage": "https://github.com/ikatyang/dts-jest#readme",
  "author": "ikatyang",
  "license": "MIT",
  "scripts": {
    "prepublish": "yarn run build",
    "lint": "tslint --type-check -p ./tsconfig.json",
    "build": "rm -rf ./lib && tsc -p ./tsconfig.build.json",
    "test": "jest -c ./jest.json --no-cache",
    "test-integration": "jest --config ./tests/jest.json --no-cache --verbose",
    "release": "standard-version"
  },
  "dependencies": {
    "require-from-string": "^1.2.1",
    "ts-comment": "^1.0.1",
    "tsconfig-extends": "^1.0.1"
  },
  "devDependencies": {
    "@types/jest": "20.0.7",
    "@types/node": "8.0.24",
    "jest": "20.0.4",
    "prettier": "1.5.3",
    "prettier-config-ikatyang": "1.1.1",
    "standard-version": "4.2.0",
    "ts-jest": "20.0.10",
    "tslint": "5.6.0",
    "tslint-config-ikatyang": "2.2.0",
    "tslint-config-prettier-ext": "1.5.0",
    "tslint-plugin-prettier": "1.1.0",
    "typescript": "2.4.2"
  },
  "peerDependencies": {
    "jest": "^20.0.4",
    "typescript": "^2.0.0"
  },
  "engines": {
    "node": ">= 4"
  },
  "files": [
    "/bin/**/*",
    "/lib/**/*",
    "/*.js"
  ]
}
