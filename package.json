{
  "name": "dts-jest",
  "version": "1.0.5",
  "description": "A preprocessor for jest to snapshot test TypeScript declaration (.d.ts) files",
  "keywords": [
    "jest",
    "jest-transform",
    "test",
    "typescript",
    "typescript-declarations"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "https://github.com/ikatyang/dts-jest",
  "homepage": "https://github.com/ikatyang/dts-jest#readme",
  "author": "ikatyang",
  "license": "MIT",
  "scripts": {
    "prepublish": "yarn run link && yarn run build-release",
    "lint": "tslint --type-check --project ./tsconfig.json",
    "test": "jest --config ./jest.json --no-cache",
    "test-ci": "yarn run test -- --verbose",
    "pretest-coverage": "rm -rf ./coverage",
    "test-coverage": "yarn run test -- --coverage",
    "test-coverage-ci": "yarn run test-coverage -- --verbose && codecov",
    "prebuild": "rm -rf ./lib",
    "build": "tsc -p ./tsconfig.build.json",
    "build-release": "yarn run build -- --sourceMap false",
    "link": "ln -sf $PWD $PWD/node_modules/",
    "prerelease": "yarn run lint && yarn run test",
    "release": "yarn publish"
  },
  "dependencies": {
    "typescript": "^2.3.2"
  },
  "devDependencies": {
    "@types/jest": "19.2.3",
    "@types/node": "7.0.18",
    "codecov": "2.2.0",
    "jest": "20.0.1",
    "ts-jest": "20.0.3",
    "tslint": "5.2.0",
    "tslint-config-ikatyang": "0.4.0"
  },
  "peerDependencies": {
    "jest": "^20.0.1"
  },
  "engines": {
    "node": ">= 4"
  },
  "files": [
    "lib/**"
  ]
}
